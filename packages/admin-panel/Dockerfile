# leo-frontend Dockerfile
# Generated by SWARM-ORCHESTRATOR

FROM python:3.12-slim as base

WORKDIR /app
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application
COPY src/ ./src/
COPY pyproject.toml .

# Production stage
FROM base as production
EXPOSE 3000
CMD ["uvicorn", "src.leo_frontend.main:app", "--host", "0.0.0.0", "--port", "3000"]
